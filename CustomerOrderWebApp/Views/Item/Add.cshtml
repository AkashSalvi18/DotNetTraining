@model CustomerOrderWebApp.Models.Item

@{
    ViewData["Title"] = "Add Item";
}

<h2>Add New Item</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="ItemName"></label>
        <input asp-for="ItemName" class="form-control" />
        <span asp-validation-for="ItemName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ItemDesc"></label>
        <input asp-for="ItemDesc" class="form-control" />
        <span asp-validation-for="ItemDesc" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Item</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
