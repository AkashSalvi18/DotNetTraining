@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Customer Order Management System</h1>
        <p class="lead">Streamline your customer orders and manage transactions efficiently and effortlessly.</p>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">📦 Manage Orders</h5>
                    <p class="card-text">Create, view, and manage customer orders with item-level details and real-time pricing.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mt-4 mt-md-0">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">👤 Customer Profiles</h5>
                    <p class="card-text">Maintain customer information such as name, address, and phone number for faster order processing.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mt-4 mt-md-0">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">💳 Payment Tracking</h5>
                    <p class="card-text">Capture payment mode and track transactions to ensure accuracy and transparency.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5 text-center">
        <a href="/CustOrder/Create" class="btn btn-primary btn-lg">Start Creating Orders</a>
    </div>
</div>
